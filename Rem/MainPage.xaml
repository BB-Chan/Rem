                            <TextBlock Text="Mail" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#FFDADADA" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:Name="CardsLBI">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xEC5C;" Margin="0" VerticalAlignment="Center" Foreground="#FFDADADA" />
                            <TextBlock Text="Cards" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#FFDADADA" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:Name="BankLBI">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE825;" Margin="0" VerticalAlignment="Center" Foreground="#FFDADADA" />
                            <TextBlock Text="Bank" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center" Foreground="#FFDADADA" />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <ScrollViewer x:Name="PWScrollViewer" HorizontalAlignment="Left" Height="1040" VerticalAlignment="Top" Width="297">
                <ListBox x:Name="PWlistBox" Background="#FF35353D"/>
            </ScrollViewer>

        </SplitView>
        <Button x:Name="addButton" Content="&#xE109;" BorderThickness="0" Width="38" Height="38" FontFamily="Segoe MDL2 Assets" Margin="0,0,0,38" VerticalAlignment="Bottom" Foreground="#FFDADADA" Background="{x:Null}"/>
        <Button x:Name="settingsButton" Content="&#xE115;" BorderThickness="0" Width="38" Height="38" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Bottom" Foreground="#FFDADADA" Background="{x:Null}"/>
    </Grid>


</Page>
